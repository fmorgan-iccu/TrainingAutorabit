<apex:page standardController="Account">
<apex:stylesheet value="{$Resource.PLStyles}" />

  <!-- Define Tab panel .css styles -->
    <style>
    .activeTab {background-color: #f1f1f1; color:black; background-image:none}
    .inactiveTab { background-color: lightgrey; color:black; background-image:none}
    .information { font-size:x-small; }
    </style>
 <apex:tabPanel switchType="client" selectedTab="tab1" id="AccountTabPanel" tabClass="activeTab" inactiveTabClass="inactiveTab">
        <apex:tab label="Balance Sheet" name="tab1" id="tab1">
            <apex:pageBlock >
                <apex:pageBlockSection collapsible="false" columns="2" showHeader="false">
                    <apex:outputField value="{!account.PLNDR__PL_Relationship__c}" label="PrecisionLender Relationship" styleClass="AlignOptFilld" />
                    <apex:outputText value="&nbsp;" escape="false"/>
                    <apex:pageBlockSection collapsible="false" columns="1" showHeader="true" title="Current Balance Sheet & Fee Accounts">
                        <apex:outputField value="{!account.PLNDR__Current_Loan_Balance__c}" label="Loan Balance"/>
                        <apex:outputField value="{!account.PLNDR__Current_Deposit_Balance__c}" label="Deposit Balance"/>
                        <apex:outputField value="{!account.PLNDR__Current_Other_Income__c}" label="Other Income"/>
                    </apex:pageBlockSection>
                    <apex:pageBlockSection collapsible="false" columns="1" showHeader="true" title="Strategic Net Income Rank">
                        <apex:outputField value="{!account.PLNDR__Percentile_Text__c}" label="Percentile"/>                    
                        <apex:outputField value="{!account.PLNDR__Regional_Percentile_Text__c}" label="Regional Percentile"/>                    
                        <apex:outputField value="{!account.PLNDR__Owner_Percentile_Text__c}" label="Owner Percentile"/>
                    </apex:pageBlockSection>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    <apex:outputField value="{!account.PLNDR__PrecisionLender_Last_Updated__c}"/>
                </apex:pageBlockSection>
            </apex:pageBlock>
                                 <div>
       <p class="information">
         Note: These values may represent the rolled-up values for multiple lower-level relationships.
     </p>                                 
 </div>
        </apex:tab>

        <apex:tab label="Strategic Income Statement" name="tab2" id="tab2">
            <apex:pageBlock >
                <apex:pageBlockSection title="Relationship Strategic Income Statement" collapsible="false" columns="2" showHeader="false">
                    <apex:outputField value="{!account.PLNDR__FS_Interest_Income__c}"/>
                    <apex:outputField value="{!account.PLNDR__FS_Average_Yield__c}"/>
                    
                    <apex:outputField value="{!account.PLNDR__FS_Interest_Expense__c}" html-sss="border-bottom:solid 1px"/>
                    <apex:pageBlockSectionItem />
                    
                    <apex:outputField value="{!account.PLNDR__FS_Net_Interest_Income__c}"/>
                    <apex:outputField value="{!account.PLNDR__FS_Net_Interest_Margin__c}"/>
                    
                    <apex:outputText value="&nbsp;" escape="false"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    
                    <apex:outputField value="{!account.PLNDR__FS_Non_Interest_Expense__c}"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    
                    <apex:outputField value="{!account.PLNDR__FS_Loan_Loss_Reserves__c}"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    
                    <apex:outputField value="{!account.PLNDR__FS_Other_Income__c}"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    
                    <apex:outputField value="{!account.PLNDR__FS_Pre_Tax_Income__c}"/>
                    <apex:outputText value="&nbsp;" escape="false"/>
                    
                    <apex:outputText value="&nbsp;" escape="false"/>
