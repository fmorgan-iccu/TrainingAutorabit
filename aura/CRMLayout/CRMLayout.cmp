<aura:component implements="lightning:recordHomeTemplate" description="A custom layout for ICCU.  Contains a top banner with a left sidebar and a tabbed right main section.">

    <aura:attribute name="left" type="Aura.Component[]" />
    <aura:attribute name="right" type="Aura.Component[]" />
    <aura:attribute name="banner" type="Aura.Component[]" />

    <div>
        <lightning:layout horizontalAlign="spread">
            <lightning:layoutItem flexibility="grow" class="slds-m-large">
                {!v.banner}
            </lightning:layoutItem>
        </lightning:layout>
    </div>

    <div>
        <lightning:layout horizontalAlign="spread" class="layout-row-2">
            <lightning:layoutItem size="{! $Browser.isDesktop ? '4' : $Browser.isTablet ? '6' : '12' }"  class="slds-m-large layout-row-2__column-1 dnaAuth-layout-fix">
                {!v.left}
            </lightning:layoutItem>
            <lightning:layoutItem flexibility="grow">
                {!v.right}
            </lightning:layoutItem>
        </lightning:layout>
    </div>

</aura:component>